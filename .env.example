# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URI=mongodb://localhost:27017/video-editing-mvp

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h

JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# Bundle.social Configuration
BUNDLE_SOCIAL_API_KEY=your-bundle-social-api-key-here
BUNDLE_SOCIAL_BASE_URL=https://api.bundle.social/api/v1
BUNDLE_SOCIAL_ORG_ID=your-organization-id-here

# Video Upload Configuration
VIDEO_UPLOAD_TIMEOUT=120000
VIDEO_UPLOAD_MAX_RETRIES=3
VIDEO_UPLOAD_RETRY_BASE_DELAY=1000
VIDEO_UPLOAD_RETRY_MAX_DELAY=30000

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration(Resend for Railway-Hosted)
RESEND_API_KEY=your-resend-api-key-here
RESEND_FROM=solo-ai@theprelofts.in

# Email Configuration (Resend for railway-hosted)
# Get your API key from https://resend.com/api-keys/
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=Video Editing Platform

# SMTP Configuration (Gmail SMTP - DISABLED for production due to Railway connection timeout)
# For Gmail, you need to create an App Password:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification if not already enabled
# 3. Go to App passwords (search for "App passwords" in Google Account)
# 4. Generate a new app password for "Mail"
# 5. Use your Gmail address as SMTP_USER and the generated password as SMTP_PASS
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-gmail-app-password
# SMTP_FROM_EMAIL=your-email@gmail.com
# SMTP_FROM_NAME=Video Editing Platform

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Production Configuration
PRODUCTION_URL=https://your-production-domain.com

# Admin Panel Configuration
ADMIN_JWT_SECRET=your-super-secure-admin-jwt-secret-key-here-different-from-user-jwt
ADMIN_JWT_EXPIRES_IN=1d
ADMIN_JWT_REFRESH_SECRET=your-super-secure-admin-refresh-secret-key-here
ADMIN_JWT_REFRESH_EXPIRES_IN=7d

# Cloudinary Configuration (for media uploads in admin panel)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Inspiration API Configuration
# Google Trends is accessed directly - NO API KEY REQUIRED! ðŸŽ‰
# It's completely FREE and scrapes Google Trends public data

# Reddit API Configuration (get credentials from https://www.reddit.com/prefs/apps)
# 1. Go to https://www.reddit.com/prefs/apps
# 2. Click "create another app..." at the bottom
# 3. Select "script" as the app type
# 4. Use http://localhost:5000 as redirect uri
REDDIT_CLIENT_ID=your-14-char-client-id
REDDIT_CLIENT_SECRET=your-27-char-secret
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password
REDDIT_USER_AGENT=SoloAI/1.0.0 (by /u/your_username)

# Inspiration Cache TTL (in seconds, default: 86400 = 24 hours)
INSPIRATION_CACHE_TTL=86400